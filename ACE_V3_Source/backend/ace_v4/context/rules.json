[
    {
        "name": "refund_case",
        "when": {
            "column": "transaction_amount",
            "operator": "<",
            "value": 0,
            "and": [
                {
                    "column": "transaction_type",
                    "equals": "refund"
                }
            ]
        },
        "action": "downgrade_severity"
    },
    {
        "name": "vip_spend",
        "when": {
            "column": "spend",
            "operator": ">",
            "value": 50000,
            "and": [
                {
                    "column": "segment",
                    "equals": "VIP"
                }
            ]
        },
        "action": "mark_valid_extreme"
    },
    {
        "name": "synthetic_accounts",
        "when": {
            "column": "account_id",
            "starts_with": "TEST"
        },
        "action": "suppress"
    }
]