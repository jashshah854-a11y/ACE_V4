[
    {
        "id": "trigger_overseer",
        "agent_id": "overseer",
        "type": "event",
        "event": "file_change",
        "path": "data/customers.csv",
        "description": "Start Overseer when dataset changes."
    },
    {
        "id": "trigger_sentry",
        "agent_id": "sentry",
        "type": "condition",
        "url": "http://localhost:8000/read/clusters",
        "condition": "not_empty",
        "description": "Start Sentry when clusters are available."
    },
    {
        "id": "trigger_persona",
        "agent_id": "persona_engine",
        "type": "condition",
        "url": "http://localhost:8000/read/anomalies",
        "condition": "field_gt_zero",
        "field": "count",
        "description": "Start Persona Engine when anomalies are detected (count > 0). Note: In practice, we might run even if 0, but following specific user instruction."
    },
    {
        "id": "trigger_fabricator",
        "agent_id": "fabricator",
        "type": "condition",
        "url": "http://localhost:8000/read/persona",
        "condition": "field_exists",
        "field": "personas",
        "description": "Start Fabricator when personas are defined."
    },
    {
        "id": "trigger_expositor",
        "agent_id": "expositor",
        "type": "condition",
        "url": "http://localhost:8000/read/strategy",
        "condition": "field_exists",
        "field": "strategies",
        "description": "Start Expositor when strategies are ready."
    }
]